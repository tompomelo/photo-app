<% if current_user %>
<h3>Welcome: <%= current_user.email %></h3>
<% else %>

<div class="jumbotron">
    <h2>Welcome to the Photo Management App!</h2>
    <p class="lead">
        You'll love managing your Photos with our application. Sign up!
    </p>
</div>
<div class="row">
    <div class="plans clearfix">
        
        <div class="col-md-4 panel panel-info">
            <h2>Free Plan</h2>
            <div class="price pull-right">
                Price: Free!
            </div>
            <div class="features">
                <ul>
                    <li>Limited Image Uploads</li>
                    <li>Responsive Design</li>
                    <li>Access Anywhere</li>
                </ul>
            </div>
            <p>
                <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary sign-up" %>
            </p>
        </div>
        <div class="col-md-4 panel panel-info">
<!--  old style     <div class="col-lg-3 col-lg-offset-3 plan"> -->
            <h2>Premium Plan</h2>
            <div class="price pull-right">
                Price: $10
            </div>
            <div class="features">
                <ul>
                    <li>Unlimited Image Uploads</li>
                    <li>Responsive Design</li>
                    <li>Access Anywhere</li>
                </ul>
            </div>
            <p>
                <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary sign-up' %>
            </p>
        </div>
        <div class="col-md-4 panel panel-info">
<!-- old style       <div class="col-lg-3 plan"> -->
            <h2>Amaze Plan</h2>
            <div class="price pull-right">
                Price: $20
            </div>
            <div class="features">
                <ul>
                    <li>Unlimited Uploads & Unlimited Projects!</li>
                    <li>Responsive Design</li>
                    <li>Access Anywhere</li>
                </ul>
            </div>
            <p>
                <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary sign-up' %>
            </p>
        </div>
    </div>
</div>

<% end %>
